{
  "name": "@decocms/bookmarks",
  "version": "1.0.0",
  "description": "Bookmark management with AI enrichment via Perplexity and Firecrawl",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --hot server/main.ts",
    "serve": "bun run server/serve.ts",
    "dev:link": "deco link -p 8011 -- PORT=8011 bun run dev",
    "build:server": "NODE_ENV=production bun build server/main.ts --target=bun --outfile=dist/server/main.js",
    "build": "bun run build:server",
    "publish": "cat app.json | deco registry publish -w /shared/deco -y",
    "check": "tsc --noEmit"
  },
  "exports": {
    "./tools": "./server/tools/index.ts"
  },
  "dependencies": {
    "@decocms/bindings": "^1.0.9",
    "@decocms/runtime": "1.2.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "1.25.1",
    "deco-cli": "^0.28.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
