{
  "name": "discord-read",
  "version": "1.0.0",
  "type": "module",
  "main": "server/main.ts",
  "description": "Discord bot with message indexing, AI agent commands and reaction tracking - unified MCP server",
  "scripts": {
    "check": "tsc --noEmit && echo âœ” Ok",
    "build": "tsc",
