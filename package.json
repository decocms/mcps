{
  "name": "@decocms/mcps",
  "version": "1.0.0",
  "description": "First-party MCPs maintained by the decocms team.",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "5.9.3",
    "oxfmt": "^0.9.0",
    "oxlint": "^1.26.0"
  },
  "scripts": {
    "new": "bun scripts/new.ts",
    "fmt": "oxfmt",
    "lint": "oxlint",
    "check": "bun run --filter=* check",
    "clean": "rm -rf node_modules */node_modules */dist */.vite */.wrangler */.deco",
    "prepare": "sh scripts/setup-hooks.sh",
    "build": "bun run ./scripts/build-mcp.ts"
  },
  "workspaces": [
    "apify",
    "data-for-seo",
    "datajud",
    "gemini-pro-vision",
    "google-calendar",
    "meta-ads",
    "nanobanana",
    "object-storage",
    "openrouter",
    "perplexity",
    "pinecone",
    "readonly-sql",
    "registry",
    "replicate",
    "shared",
    "sora",
    "template-minimal",
    "template-with-view",
    "veo",
    "whisper",
    "mcp-studio"
  ],
  "dependencies": {
    "@types/node": "^24.10.0"
  }
}
